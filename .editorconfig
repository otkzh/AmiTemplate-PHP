# EditorConfig: <http://editorconfig.org/>

# Top‐most EditorConfig file
root = true

# Unix‐style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true

# Character encoding
charset = utf-8

# Tab‐based indentation
indent_style = tab
tab_width =2

# Markdown files
[*.md]
trim_trailing_whitespace = false